<div class="container mt-5">
    <div class="col-6 border border-info rounded m-auto p-2">
        <h3 class="text-info">INGRESAR PRODUCTOS:</h3>
        <form action="/productos" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Producto:</label>
                <input name="name" class="form-control">
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Categoria:</label>
                <input name="category" class="form-control">
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Precio:</label>
                <input name="price" class="form-control">
            </div>    
            <div class="mb-3">
                <label for="img" class="form-label">Imagen:</label>
                <input type="url" name="img" class="form-control">
            </div>        
            <button type="submit" class="btn btn-outline-info">GUARDAR</button>
            <button type="button" class="btn btn-outline-info"><a href="/productos">IR A LISTADO</a></button>
        </form>
    </div>
</div>
