html
    head    
        title DECO&HOME
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
    body
        div(class="container mt-5")
        div(class="col-6 border border-info rounded m-auto p-2")
            h3(class="text-info") INGRESAR PRODUCTOS:
            form(action="/productos" method="post")
                div(class="mb-3")
                    label(for="name" class="form-label") Producto:
                    input(name="name" class="form-control")
                div(class="mb-3")
                    label(for="category" class="form-label") Categoria:
                    input(name="category" class="form-control")
                div(class="mb-3")
                    label(for="price" class="form-label") Precio:
                    input(name="price" class="form-control")
                div(class="mb-3")
                    label(for="img" class="form-label") Imagen:
                    input(type="url" name="img" class="form-control")     
                button(type="submit" class="btn btn-outline-info mr-1") GUARDAR
                button(type="button" class="btn btn-outline-info")
                    a(href="/productos") IR A LISTADO
    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous")
